<%- include('../partials/navbar.ejs') %>

<div
  class="container d-flex justify-content-center align-items-center vh-100 fade-in"
>
  <div
    class="card shadow-lg p-4 scale-up"
    style="max-width: 500px; border-radius: 15px"
  >
    <h1 class="text-center mb-4 fw-bold text-primary slide-down">
      Create Your Account
    </h1>
    <p class="text-center text-muted mb-4 slide-down-delayed">
      Sign up to explore more features.
    </p>
    <form id="accountSignUp" action="/account/sign-up" method="POST">
      <div class="form-floating mb-3 slide-up">
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          placeholder="Username"
          required
        />
        <label for="username">Username</label>
      </div>

      <div class="form-floating mb-3 slide-up-delayed">
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          placeholder="Full Name"
          required
        />
        <label for="name">Name</label>
      </div>

      <div class="form-floating mb-3 slide-up">
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="Password"
          required
        />
        <label for="password">Password</label>
      </div>

      <div class="form-floating mb-3 slide-up-delayed">
        <input
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          class="form-control"
          placeholder="Confirm Password"
          required
        />
        <label for="confirmPassword">Confirm Password</label>
      </div>

      <button
        class="btn btn-primary w-100 py-2 fw-bold hover-bounce"
        type="submit"
      >
        Sign Up
      </button>

      <div class="text-center mt-3 fade-in-delayed">
        <small class="text-muted">
          Already have an account?
          <a href="/account/sign-in" class="text-primary fw-semibold"
            >Sign in</a
          >
        </small>
      </div>
    </form>
  </div>
</div>

<style>
  /* Reusing animations from Sign-In */
  .fade-in {
    animation: fadeIn 1s ease-in-out;
  }

  .fade-in-delayed {
    animation: fadeIn 1.5s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .scale-up {
    animation: scaleUp 0.8s ease-in-out;
  }

  @keyframes scaleUp {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  .slide-down {
    animation: slideDown 0.8s ease-out;
  }

  .slide-down-delayed {
    animation: slideDown 1.2s ease-out;
  }

  @keyframes slideDown {
    from {
      transform: translateY(-20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .slide-up {
    animation: slideUp 0.8s ease-out;
  }

  .slide-up-delayed {
    animation: slideUp 1.2s ease-out;
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .hover-bounce:hover {
    animation: bounce 0.5s;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
</style>
